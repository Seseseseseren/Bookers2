<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size:'64x64' %></p>
  <table class="table">
  <tbody><tr></tr>
  <tr>
    <th>name</th>
	  <th><%=@user.name%></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%=@user.introduction%></th>
  </tr>
</tbody>
</table>

<div class="row">
  <%= link_to "",edit_user_path(@user),class:"fas fa-user-cog btn btn-outline-secondary btn-block " %></p>
</div>


  <% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book,local:true do |f| %>
  <h2 class="mt-3">New book</h1>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: "button" %>
  <% end %>
</div>

    <div class="col-md-8 offset-md-1">
  	  <table class="table table-sm user-index">
	  	  <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
          </thead>
        
          <tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg",size:'64x64' %></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", user_path(user.id) %></td>
	  	  	</tr>
  	  	  <% end %>
  	     </tbody>
  	  </table>
  	</div>
  </div>
  </div>
      </main>