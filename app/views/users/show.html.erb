<main>

  <p id="notice"></p>
  <div class="container px-5">
    <div class="row">
      <div class="col-md-3">
    <%= render 'share/sidebar', user: @user, book: @book %>

     <div class="col-md-8 offset-md-1">
       <table class="table table-hover table-inverse">
         <h2>Books</h2>
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>

    <% @books.each do |book| %>
    <tr>
      <th><%= link_to (attachment_image_tag @user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg",size:'40x40'),user_path(@user.id) %></th>
	  	<th><%= link_to book.title,book_path(book.id) %></th>
	  	<th><%= book.body %></th>
	  	</tr>
  	<% end %>
     </thead>
     </table>
    </div>
   </div>
  </div>
 </div>
</main>
