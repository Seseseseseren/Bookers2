<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size:'64x64' %></p>
  <table class="table">
  <tbody><tr></tr>
  <tr>
    <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody>
</table>

<div class="row">
  <%= link_to "",edit_user_path(@user),class:"fas fa-user-cog btn btn-outline-secondary btn-block " %></p>
</div>


  <% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@new_book,local:true do |f| %>
  <h2 class="mt-3">New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: "button" %>
  <% end %>
</div>

    <div class="col-md-8 offset-md-1">
  	  <table class="table table-sm user-index">
  <h2>Book detail</h2>
  <thead>
    <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'40x40' %><br>
        <%= @user.name %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
        <% if @user == current_user %>
      <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success btn-sm" %></td>
      <td><%= link_to 'Destroy', book_path(@book), method: :delete, class:'btn btn-danger btn-sm' %></td>
        <% end %>
      </tr>  
    </thead>
    </table>
    </div>
    </div>
    </div>
    </main>