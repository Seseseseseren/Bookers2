<main>
  <div class="container px-5 ">
    <div class="row">
     <div class="col-md-3">
       <%= render 'share/sidebar', user: @user, book: @new_book %>

  <div class="col-md-8 offset-md-1">
    <table class="table table-hover table-inverse">
      <h2>Book detail</h2>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'40x40' %><br>
            <%= @user.name %>
            <% end %>
         </td>
         <td><%= @book.title %></td>
         <td><%= @book.body %></td>

         <% if @user == current_user %>
         <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success btn-sm" %></td>
         <td><%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" , class:'btn btn-danger btn-sm' %></td>
         <% end %>
       </tr>
      </thead>
     </table>
    </div>
   </div>
  </div>
 </div>
</main>