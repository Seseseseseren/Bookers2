<main>


   <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <% if @book.errors.any? %>
   <p class='error-messages'><%= @book.errors.count %>errors prohibited this obj from being saved:<br></p>
    <% @book.errors.full_messages.each do |message| %>
     <li class='devise-error-messages'><%= message %></li>
  <% end %>
<% end %>


  <h2 class="mt-3">Editing Book</h2>
  <%= form_with model:@book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title,size: "50x50" %>
  <h4>Opinion</h4>
  <%= f.text_area :body,size: "50x3" %><br>
  <%= f.submit 'Update Book',class:'btn btn-success btn-sm' %>
  <% end %>

  <%= link_to 'Show',book_path(@book.id) %>
  |
  <%= link_to 'Back',books_path %>

</div>
</div>
</div>
</main>