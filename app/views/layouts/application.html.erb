<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <nav class="nav navbar-left">
        <h5> <%= link_to "Bookers", root_path,class:"nav-link text-light" %></h5>
        </nav>

        <nav class="nav navbar-right">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Home", user_path(current_user.id),class:"fas fa-home nav-link text-light" %>
            </li>
            <li class="nav-item">
                <%= link_to "Users", users_path,class:"fas fa-users nav-link text-light" %>
            </li>
            <li class="nav-item">
                <%= link_to "Books", book_index_path,class:"fas fa-book-open nav-link text-light" %>
            </li>
            <li class="nav-item">
                <%= link_to "Log out", destroy_user_session_path, method: :delete,class:"fas fa-sign-out-alt nav-link text-light" %>
            </li>
            <% else %>
            <li class="nav-item">
                <%= link_to "Home",root_path,class:"fas fa-home nav-link text-light" %>
            </li>
            <li class="nav-item">
                <%= link_to "About", home_about_path,class:"fas fa-link nav-link text-light" %>
            </li>
            <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path,class:"fas fa-user-plus nav-link text-light" %>
            </li>
            <li class="nav-item">
                <%= link_to "Sign in", new_user_session_path,class:"fas fa-sign-in-alt nav-link text-light" %>
            </li>
            <% end %>
          </ul>
        </nav>
      </div>
      </div>
    </header>

    <div class="body">
      <p class="notice"><%= notice %></p>

      <%= yield %>


        <footer>
          <div class="container mt-4">
           <div class="row">
            <div class="mx-auto">
              <p>CopyRight Infratop.inc</p>
            </div>
           </div>
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>
